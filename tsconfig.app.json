{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2023",
      "dom"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": [
      "vitest/globals"
    ],
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}